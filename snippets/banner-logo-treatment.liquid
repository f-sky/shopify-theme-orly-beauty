{% if current_tags != blank %}
 

{% if current_tags contains 'Category Basecoats' %}
<div class="bnr">
  <header class="collection-header prod">     
         
         <div class="collection-hero__title-wrapper bgcolor-coll">  
          <h1 class="collection-hero__title">Basecoats</h1>
           <a class="open-catenav">Filters</a>
       </div>
    
        
      <div class="collection-hero">
        <div class="collection-hero__image ratio-container lazyload js"
             data-bgset="{% include 'bgset'%}"
             data-sizes="auto"
             data-parent-fit="cover"
             style="background-image: url({{ 'sheer-banner.jpg' | asset_url }});"></div>
        <noscript>
          <div class="collection-hero__image" style="background-image: url({{ 'sheer-banner.jpg' | asset_url }});"></div>
        </noscript>
      </div>        
  </header>
</div>

